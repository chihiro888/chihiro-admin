  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "debug NestJS",
      "runtimeExecutable": "yarn",
      "osx": {
        "args": ["start:dev"]
      },
      "linux": {
        "args": ["start:dev"]
      },
      "windows": {
        "args": ["start:dev"]
      },
      "console": "integratedTerminal",
      "restart": true,
      "autoAttachChildProcesses": true,
      "cwd": "${workspaceFolder}/backend",
      "env": {
        "NODE_ENV": "development"
      }
    }
  ]
}
