{
  "compilerOptions": {
    // ECMAScript 목표 버전 설정
    "target": "es5",

    // 생성될 모듈 코드 설정
    "module": "esnext",

    // JavaScript 파일 컴파일 허용
    "allowJs": true,

    // 모든 엄격한 유형 검사 옵션
    "strict": false,

    // 컴파일 과정에 사용될 라이브러리 파일 설정
    "lib": ["dom", "dom.iterable", "esnext"],

    // 모듈 분석 방법 설정
    "moduleResolution": "node",

    // json 모듈
    "resolveJsonModule": true,

    // 각 파일을 별도 모듈로 변환
    "isolatedModules": true,

    // 생성될 JSX 코드 설정
    "jsx": "react-jsx",

    // 선언 파일 유형 검사 스킵
    "skipLibCheck": true,

    // 기본 출력(default export)이 없는 모듈로부터 기본 호출을 허용 (이 코드는 단지 유형 검사만 수행)
    "esModuleInterop": true,

    // 모든 가져오기에 대한 네임스페이스 객체 생성을 통해 CommonJS와 ES 모듈 간의 상호 운용성을 제공
    "allowSyntheticDefaultImports": true,

    // 동일한 파일에 대한 일관되지 않은 케이스 참조를 허용하지 않음
    "forceConsistentCasingInFileNames": true,

    // switch 문 오류 유형에 대한 오류 보고
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
